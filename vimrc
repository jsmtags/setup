" enable mouse
set mouse=a 
 
" automatically indent
set autoindent

" incremental and highlighted search
set incsearch
set hlsearch

" ignore case when searching, unless using all lower
set ignorecase
set smartcase

" syntax highlighting
colorscheme elflord

" use spaces instead of tabs
set expandtab
" tabs are worth 4 spaces 
set shiftwidth=4
" backspace deletes shiftwidth many spaces
set smarttab
" tab characters have width 4
set tabstop=4
